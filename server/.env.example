# Transport Configuration
MCP_TRANSPORT=stdio
LOG_LEVEL=info

# Plugin Configuration
PLUGINS_DISCOVERY_PATHS=./src/plugins
PLUGINS_AUTOLOAD=true

# Plugin Allow/Block Lists
# Leave empty to load all plugins (default behavior)
PLUGINS_ALLOWED_LIST=
PLUGINS_BLOCKED_LIST=

# To explicitly enable only certain plugins:
# PLUGINS_ALLOWED_LIST=standard,bbedit

# To load all except certain plugins:
# PLUGINS_ALLOWED_LIST=
# PLUGINS_BLOCKED_LIST=experimental

# AppleScript Safety Configuration
# Set to true to enable the dangerous 'run_script' tool that allows arbitrary AppleScript execution
# WARNING: Only enable this if you trust the LLM client completely
ENABLE_ARBITRARY_SCRIPTS=false

# AppleScript Timeout Configuration
# Default timeout for AppleScript execution (milliseconds)
APPLESCRIPT_TIMEOUT_DEFAULT=30000

# Maximum allowed timeout (hard limit, milliseconds)
APPLESCRIPT_TIMEOUT_MAX=300000

# Storage Configuration
STORAGE_DENO_KV_PATH=./data/app.db

# HTTP Transport (optional, only if using http instead of stdio)
# HTTP_PORT=3000
# HTTP_HOST=localhost
